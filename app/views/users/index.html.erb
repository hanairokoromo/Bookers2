<%= render 'books/book', users: @user %>

<%= @books.each do |book| %>
<div>
    <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
    <%= link_to user_path(current_user.id) do %>
      <%= book.user.name %>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
    <p>Opinion: <%= book.body %></p>
</div>
<% end %>