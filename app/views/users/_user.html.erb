
  <h2>User info</h2>
  <thead>
    <tr>
        <%= image_tag users.get_profile_image(100, 100) %>
    </tr>
  </thead>
  <table class="table">
    <tbody>
        <tr>
            <th>name</th>
            <th><%= users.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
    <td colspan="2">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
    </td>
  </table>